<section class="login flex justify-center pt-8">
    <div class="flex items-center justify-center">
        <div class="w-full max-w-md">
          <form action="/register" method="POST" class="bg-white shadow-lg rounded px-12 pt-6 pb-8 mb-4">
            <!-- @csrf -->
            <% if(messages.error)  { %>
            <span class="text-red-500 text-sm"><%=messages.error%></span>
            <% } %>
            <div
              class="text-gray-800 text-2xl flex justify-center border-b-2 py-2 mb-4">
              Register Here
            </div>
            <div class="mb-4">
              <label
                class="block text-gray-700 text-sm font-normal mb-2"
                for="username">
                Email
              </label>
              <input
              name="email" value="<%= messages.email%>"
                class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
                type="email"
                placeholder="Email"/>
            </div>
            <div class="mb-4">
                <label 
                  class="block text-gray-700 text-sm font-normal mb-2"
                  for="Enter Name">
                  Name
                </label>
                <input
                name="name" value="<%= messages.name%>"
                  class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
                  type="text"
                 placeholder="Enter Name"/>
              </div>
            <div class="mb-6">
              <label
                class="block text-gray-700 text-sm font-normal mb-2"
                for="password">
                Password
              </label>
              <input
              name="password"
                class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline"
                type="password"
                placeholder="Password"
              />
            </div>
            <div class="flex items-center justify-between">
              <button type="submit" class="px-4 py-2 rounded text-white inline-block  btn">Register</button>
              <a
                class=" ml-4 inline-block align-baseline font-normal text-sm text-blue-500 hover:text-blue-800"
                href="/login"
              >
                Already have account
              </a>
            </div>
          </form>
          <p class="text-center text-gray-500 text-xs">
            &copy;2021 Pizza Corp. All rights reserved.
          </p>
        </div>
      </div>
    </section>